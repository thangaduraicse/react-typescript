{
  "awesomeTypescriptLoaderOptions": {
    "forkCheckerSilent": true,
    "useBabel": true
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "crlf",
    "outDir": "www",
    "paths": {
      "jquery": ["node_modules/jquery/dist/jquery"]
    },
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "www"
  ]
}
